{
  "extends": "@virtality/typescript-config/base.json",
  "compilerOptions": {
    "rewriteRelativeImportExtensions": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",

    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
