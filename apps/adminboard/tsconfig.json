{
  "extends": "@virtality/typescript-config/nextjs.json",

  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "noUncheckedIndexedAccess": false,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
